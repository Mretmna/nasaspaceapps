{
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/next",
        "config": {
          "distDir": "frontend/.next"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ],
    "rewrites": [
      {
        "source": "/api/calculate/",
        "destination": "/api/calculate"
      }
    ]
  }